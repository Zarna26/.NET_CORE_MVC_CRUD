@{
}

@model StudentPortal.Models.Entites.Student

<h1>Edit Student</h1>
@if (Model is null)
{
    <p>Not find student by id</p>
}
else
{
   

    <form method="post" asp-action="EditStudent" asp-controller="Student">
        <div class="mt-3">
            <label>ID</label>
            <input type="text" class="form-control" id="studentId" asp-for="Id" readonly />

        </div>
        <div class="mt-3">
            <label>Add Stduent</label>
            <input type="text" class="form-control" placeholder="Enter Student Name" id="studentName" asp-for="Name" />

        </div>
        <div class="mt-3">
            <label>Email</label>
            <input type="email" class="form-control" placeholder="Enter Student Email" id="studentEmail" asp-for="Email" />

        </div>
        <div class="mt-3">
            <label>Phone Number</label>
            <input type="number" class="form-control" placeholder="Enter Student Phone Number" id="studentPhone" asp-for="PhoneNumber" />

        </div>
        <div class="mt-3">
            <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="Subscribe" />
            <label class="form-check-label" for="Subscribe">Subscribe ?</label>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-outline-primary">Edit</button>
        </div>
    </form>
}
