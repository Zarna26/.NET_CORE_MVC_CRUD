@model StudentPortal.Models.AddStudentViewModel

<h1>Add Student</h1>

<form method="post" >

    <div class="mt-3">
        <label>Add Stduent</label>
        <input type="text" class="form-control" placeholder="Enter Student Name" id="studentName" asp-for="Name" />

    </div>
    <div class="mt-3">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter Student Email" id="studentEmail" asp-for="Email" />

    </div>
    <div class="mt-3">
        <label>Phone Number</label>
        <input type="number" class="form-control" placeholder="Enter Student Phone Number" id="studentPhone" asp-for="PhoneNumber" />

    </div>
    <div class="mt-3">
        <input type="checkbox" class="form-check-input" id="Subscribe" asp-for="Subscribe" />
        <label class="form-check-label" for="Subscribe">Subscribe ?</label>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-outline-primary" >Save</button>
    </div>
</form>